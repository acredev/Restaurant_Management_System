function maxLengthCheck1(object){
    if (object.value.length > object.maxLength){
      object.value = object.value.slice(0, object.maxLength);
    }    
  }

function maxLengthCheck2(object){
    if (object.value.length > object.maxLength){
      object.value = object.value.slice(0, object.maxLength);
    }    
  }

function signup_first_idchk()
{
	var id = document.getElementById("id");
	if (id.value == "")
	{
		alert("아이디 입력 후 다시 시도해 주세요.");
		id.focus();
		return false;
	}
	else
	{
		alert("true");
	}
}

function signup_first_stdnumchk()
{
	var id = document.getElementById("stdnum");
	if (id.value == "")
	{
		alert("학번 입력 후 다시 시도해 주세요.");
		stdnum.focus();
		return false;
	}
	else
	{
		alert("true");
	}
}

function signup_first_telchk()
{
	var id = document.getElementById("tel");
	if (id.value == "")
	{
		alert("전화번호 입력 후 다시 시도해 주세요.");
		tel.focus();
		return false;
	}
	else
	{
		alert("true");
	}
}